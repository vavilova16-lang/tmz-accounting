<body>
    <div class="container">
        <h1>üìä –£—á–µ—Ç –¢–ú–¶</h1>
        
        <div class="form-group">
            <label for="name">–ù–∞–∏–º–µ–Ω–æ–≤–∞–Ω–∏–µ —Ç–æ–≤–∞—Ä–∞:</label>
            <input type="text" id="name" placeholder="–í–≤–µ–¥–∏—Ç–µ –Ω–∞–∏–º–µ–Ω–æ–≤–∞–Ω–∏–µ —Ç–æ–≤–∞—Ä–∞">
        </div>
        
        <div class="form-group">
            <label for="category">–ö–∞—Ç–µ–≥–æ—Ä–∏—è:</label>
            <select id="category">
                <option value="–ø—Ä–æ–¥—É–∫—Ç—ã">–ü—Ä–æ–¥—É–∫—Ç—ã</option>
                <option value="–±—ã—Ç–æ–≤–∞—è_—Ç–µ—Ö–Ω–∏–∫–∞">–ë—ã—Ç–æ–≤–∞—è —Ç–µ—Ö–Ω–∏–∫–∞</option>
                <option value="–æ–¥–µ–∂–¥–∞">–û–¥–µ–∂–¥–∞</option>
                <option value="–∫–∞–Ω—Ü–µ–ª—è—Ä–∏—è">–ö–∞–Ω—Ü–µ–ª—è—Ä–∏—è</option>
                <option value="–¥—Ä—É–≥–æ–µ">–î—Ä—É–≥–æ–µ</option>
            </select>
        </div>
        
        <div class="form-group">
            <label for="quantity">–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ:</label>
            <input type="number" id="quantity" placeholder="–í–≤–µ–¥–∏—Ç–µ –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ" min="1">
        </div>
        
        <div class="form-group">
            <label for="price">–¶–µ–Ω–∞ –∑–∞ –µ–¥–∏–Ω–∏—Ü—É (‚ÇΩ):</label>
            <input type="number" id="price" placeholder="–í–≤–µ–¥–∏—Ç–µ —Ü–µ–Ω—É" min="0" step="0.01">
        </div>
        
        <div class="form-group">
            <label for="date">–î–∞—Ç–∞ –ø–æ—Å—Ç—É–ø–ª–µ–Ω–∏—è:</label>
            <input type="date" id="date">
        </div>
        
        <button class="btn" onclick="addItem()">–î–æ–±–∞–≤–∏—Ç—å —Ç–æ–≤–∞—Ä</button>
        
        <div class="search-box">
            <span class="search-icon">üîç</span>
            <input type="text" id="search" placeholder="–ü–æ–∏—Å–∫ –ø–æ –Ω–∞–∏–º–µ–Ω–æ–≤–∞–Ω–∏—é –∏–ª–∏ –∫–∞—Ç–µ–≥–æ—Ä–∏–∏..." onkeyup="searchItems()">
        </div>
        
        <div class="table-container">
            <table id="itemsTable">
                <thead>
                    <tr>
                        <th>–ù–∞–∏–º–µ–Ω–æ–≤–∞–Ω–∏–µ</th>
                        <th>–ö–∞—Ç–µ–≥–æ—Ä–∏—è</th>
                        <th>–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ</th>
                        <th>–¶–µ–Ω–∞ –∑–∞ –µ–¥. (‚ÇΩ)</th>
                        <th>–û–±—â–∞—è —Å—Ç–æ–∏–º–æ—Å—Ç—å (‚ÇΩ)</th>
                        <th>–î–∞—Ç–∞</th>
                        <th>–î–µ–π—Å—Ç–≤–∏—è</th>
                    </tr>
                </thead>
                <tbody id="tableBody">
                    <!-- –î–∞–Ω–Ω—ã–µ –±—É–¥—É—Ç –¥–æ–±–∞–≤–ª—è—Ç—å—Å—è —Å—é–¥–∞ -->
                </tbody>
            </table>
        </div>
        
        <div class="stats">
            <div class="stat-item">
                <div class="stat-number" id="totalItems">0</div>
                <div class="stat-label">–í—Å–µ–≥–æ —Ç–æ–≤–∞—Ä–æ–≤</div>
            </div>
            <div class="stat-item">
                <div class="stat-number" id="totalValue">0</div>
                <div class="stat-label">–û–±—â–∞—è —Å—Ç–æ–∏–º–æ—Å—Ç—å (‚ÇΩ)</div>
            </div>
            <div class="stat-item">
                <div class="stat-number" id="totalQuantity">0</div>
                <div class="stat-label">–û–±—â–µ–µ –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ</div>
            </div>
        </div>
    </div>

    <script>
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ
        document.addEventListener('DOMContentLoaded', function() {
            // –£—Å—Ç–∞–Ω–æ–≤–∫–∞ —Å–µ–≥–æ–¥–Ω—è—à–Ω–µ–π –¥–∞—Ç—ã –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é
            document.getElementById('date').valueAsDate = new Date();
            
            // –ó–∞–≥—Ä—É–∑–∫–∞ –¥–∞–Ω–Ω—ã—Ö –∏–∑ localStorage
            loadItems();
        });
        
        // –ú–∞—Å—Å–∏–≤ –¥–ª—è —Ö—Ä–∞–Ω–µ–Ω–∏—è —Ç–æ–≤–∞—Ä–æ–≤
        let items = [];
        
        // –§—É–Ω–∫—Ü–∏—è –¥–æ–±–∞–≤–ª–µ–Ω–∏—è —Ç–æ–≤–∞—Ä–∞
        function addItem() {
            const name = document.getElementById('name').value.trim();
            const category = document.getElementById('category').value;
            const quantity = parseInt(document.getElementById('quantity').value);
            const price = parseFloat(document.getElementById('price').value);
            const date = document.getElementById('date').value;
            
            // –í–∞–ª–∏–¥–∞—Ü–∏—è
            if (!name || !quantity || !price || !date) {
                alert('–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –∑–∞–ø–æ–ª–Ω–∏—Ç–µ –≤—Å–µ –ø–æ–ª—è!');
                return;
            }
            
            if (quantity <= 0 || price < 0) {
                alert('–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –¥–æ–ª–∂–Ω–æ –±—ã—Ç—å –±–æ–ª—å—à–µ 0, —Ü–µ–Ω–∞ –Ω–µ –º–æ–∂–µ—Ç –±—ã—Ç—å –æ—Ç—Ä–∏—Ü–∞—Ç–µ–ª—å–Ω–æ–π!');
                return;
            }
            
            // –°–æ–∑–¥–∞–Ω–∏–µ –æ–±—ä–µ–∫—Ç–∞ —Ç–æ–≤–∞—Ä–∞
            const item = {
                id: Date.now(), // —É–Ω–∏–∫–∞–ª—å–Ω—ã–π –∏–¥–µ–Ω—Ç–∏—Ñ–∏–∫–∞—Ç–æ—Ä
                name: name,
                category: category,
                quantity: quantity,
                price: price,
                date: date,
                total: (quantity * price).toFixed(2)
            };
            
            // –î–æ–±–∞–≤–ª–µ–Ω–∏–µ –≤ –º–∞—Å—Å–∏–≤
            items.push(item);
            
            // –°–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ –≤ localStorage
            saveItems();
            
            // –û—á–∏—Å—Ç–∫–∞ —Ñ–æ—Ä–º—ã
            document.getElementById('name').value = '';
            document.getElementById('quantity').value = '';
            document.getElementById('price').value = '';
            document.getElementById('date').valueAsDate = new Date();
            
            // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Ç–∞–±–ª–∏—Ü—ã
            renderTable();
            
            // –ü–æ–∫–∞–∑–∞—Ç—å —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ
            alert('–¢–æ–≤–∞—Ä —É—Å–ø–µ—à–Ω–æ –¥–æ–±–∞–≤–ª–µ–Ω!');
        }
        
        // –§—É–Ω–∫—Ü–∏—è —É–¥–∞–ª–µ–Ω–∏—è —Ç–æ–≤–∞—Ä–∞
        function deleteItem(id) {
            if (confirm('–í—ã —É–≤–µ—Ä–µ–Ω—ã, —á—Ç–æ —Ö–æ—Ç–∏—Ç–µ —É–¥–∞–ª–∏—Ç—å —ç—Ç–æ—Ç —Ç–æ–≤–∞—Ä?')) {
                items = items.filter(item => item.id !== id);
                saveItems();
                renderTable();
            }
        }
        
        // –§—É–Ω–∫—Ü–∏—è —Ä–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞–Ω–∏—è —Ç–æ–≤–∞—Ä–∞
        function editItem(id) {
            const item = items.find(item => item.id === id);
            if (!item) return;
            
            document.getElementById('name').value = item.name;
            document.getElementById('category').value = item.category;
            document.getElementById('quantity').value = item.quantity;
            document.getElementById('price').value = item.price;
            document.getElementById('date').value = item.date;
            
            deleteItem(id);
        }
        
        // –§—É–Ω–∫—Ü–∏—è –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è —Ç–∞–±–ª–∏—Ü—ã
        function renderTable(filteredItems = null) {
            const tableBody = document.getElementById('tableBody');
            tableBody.innerHTML = '';
            
            const itemsToShow = filteredItems || items;
            
            if (itemsToShow.length === 0) {
                tableBody.innerHTML = '<tr><td colspan="7" style="text-align: center; padding: 20px;">–ù–µ—Ç —Ç–æ–≤–∞—Ä–æ–≤</td></tr>';
                updateStats();
                return;
            }
            
            itemsToShow.forEach(item => {
                const row = document.createElement('tr');
                
                // –û–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–µ –∫–∞—Ç–µ–≥–æ—Ä–∏–∏ –¥–ª—è –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è
                let categoryText = '';
                switch(item.category) {
                    case '–ø—Ä–æ–¥—É–∫—Ç—ã': categoryText = 'üçé –ü—Ä–æ–¥—É–∫—Ç—ã'; break;
                    case '–±—ã—Ç–æ–≤–∞—è_—Ç–µ—Ö–Ω–∏–∫–∞': categoryText = 'üì∫ –ë—ã—Ç–æ–≤–∞—è —Ç–µ—Ö–Ω–∏–∫–∞'; break;
                    case '–æ–¥–µ–∂–¥–∞': categoryText = 'üëï –û–¥–µ–∂–¥–∞'; break;
                    case '–∫–∞–Ω—Ü–µ–ª—è—Ä–∏—è': categoryText = '‚úèÔ∏è –ö–∞–Ω—Ü–µ–ª—è—Ä–∏—è'; break;
                    case '–¥—Ä—É–≥–æ–µ': categoryText = 'üì¶ –î—Ä—É–≥–æ–µ'; break;
                }
                
                row.innerHTML = `
                    <td>${item.name}</td>
                    <td>${categoryText}</td>
                    <td>${item.quantity}</td>
                    <td>${item.price.toFixed(2)}</td>
                    <td>${item.total}</td>
                    <td>${formatDate(item.date)}</td>
                    <td class="actions">
                        <button class="btn" onclick="editItem(${item.id})" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">‚úèÔ∏è</button>
                        <button class="btn btn-delete" onclick="deleteItem(${item.id})">üóëÔ∏è</button>
                    </td>
                `;
                
                tableBody.appendChild(row);
            });
            
            updateStats();
        }
        
        // –§—É–Ω–∫—Ü–∏—è –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∏
        function updateStats() {
            const totalItems = items.length;
            const totalQuantity = items.reduce((sum, item) => sum + item.quantity, 0);
            const totalValue = items.reduce((sum, item) => sum + parseFloat(item.total), 0);
            
            document.getElementById('totalItems').textContent = totalItems;
            document.getElementById('totalQuantity').textContent = totalQuantity;
            document.getElementById('totalValue').textContent = totalValue.toFixed(2);
        }
        
        // –§—É–Ω–∫—Ü–∏—è –ø–æ–∏—Å–∫–∞
        function searchItems() {
            const searchTerm = document.getElementById('search').value.toLowerCase();
            
            if (!searchTerm) {
                renderTable();
                return;
            }
            
            const filteredItems = items.filter(item => 
                item.name.toLowerCase().includes(searchTerm) || 
                item.category.toLowerCase().includes(searchTerm)
            );
            
            renderTable(filteredItems);
        }
        
        // –§—É–Ω–∫—Ü–∏—è —Ñ–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏—è –¥–∞—Ç—ã
        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString('ru-RU', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
            });
        }
        
        // –§—É–Ω–∫—Ü–∏—è —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏—è –≤ localStorage
        function saveItems() {
            localStorage.setItem('tmzItems', JSON.stringify(items));
        }
        
        // –§—É–Ω–∫—Ü–∏—è –∑–∞–≥—Ä—É–∑–∫–∏ –∏–∑ localStorage
        function loadItems() {
            const savedItems = localStorage.getItem('tmzItems');
            if (savedItems) {
                items = JSON.parse(savedItems);
                renderTable();
            }
        }
        
        // –≠–∫—Å–ø–æ—Ä—Ç –¥–∞–Ω–Ω—ã—Ö
        function exportData() {
            const dataStr = JSON.stringify(items, null, 2);
            const dataUri = 'data:application/json;charset=utf-8,'+ encodeURIComponent(dataStr);
            
            const exportFileDefaultName = 'tmz-data-' + new Date().toISOString().slice(0,10) + '.json';
            
            const linkElement = document.createElement('a');
            linkElement.setAttribute('href', dataUri);
            linkElement.setAttribute('download', exportFileDefaultName);
            linkElement.click();
        }
        
        // –ò–º–ø–æ—Ä—Ç –¥–∞–Ω–Ω—ã—Ö
        function importData() {
            const input = document.createElement('input');
            input.type = 'file';
            input.accept = '.json';
            
            input.onchange = e => {
                const file = e.target.files[0];
                if (!file) return;
                
                const reader = new FileReader();
                reader.onload = event => {
                    try {
                        const importedItems = JSON.parse(event.target.result);
                        items = importedItems;
                        saveItems();
                        renderTable();
                        alert('–î–∞–Ω–Ω—ã–µ —É—Å–ø–µ—à–Ω–æ –∏–º–ø–æ—Ä—Ç–∏—Ä–æ–≤–∞–Ω—ã!');
                    } catch (error) {
                        alert('–û—à–∏–±–∫–∞ –ø—Ä–∏ –∏–º–ø–æ—Ä—Ç–µ –¥–∞–Ω–Ω—ã—Ö: ' + error.message);
                    }
                };
                reader.readAsText(file);
            };
            
            input.click();
        }
    </script>
</body>
</html>
